source "https://rubygems.org"
ruby "<%= RUBY_VERSION %>"

gem "rails", "<%= Rails.version %>"

<%- unless skip_bootsnap? -%>
gem "bootsnap"
<%- end -%>
gem "dotenv"
gem "env_vars"
gem "puma"
gem "rails-env"

gem "pry-meta", require: false

<%- unless skip_active_record? -%>
gem "bcrypt"
gem "<%= database_adapter %>"
<%- if database_adapter == "pg" -%>
gem "ar-bigint"
gem "ar-check"
gem "ar-timestamptz"
gem "ar-uuid"
<%- end -%>
<%- end -%>

group :production do
  gem "lograge"
  gem "rails_stdout_logging"
end

group :development do
  gem "check_files"
  gem "foreman"
end


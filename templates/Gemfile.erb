source "https://rubygems.org"
ruby "<%= RUBY_VERSION %>"

gem "rails", "<%= Rails.version %>"

gem "dotenv"
gem "env_vars"
gem "puma"
gem "rails-env"
gem "secure_headers"

<%- unless skip_active_record? -%>
gem "bcrypt"
gem "<%= database_adapter %>"
<%- if database_adapter == "pg" -%>
gem "ar-uuid"
gem "ar-timestamptz"
gem "ar-check"
<%- end -%>
<%- end -%>

group :production do
  gem "lograge"
  gem "rails_stdout_logging"
end

group :development do
  gem "check_files"
  gem "foreman"
end

group :test do
  gem "capybara"
  gem "minitest-utils"
end

# You can have your own development dependencies.
# Just add them to `Gemfile.dev`.
devfile = "#{__dir__}/Gemfile.dev"
eval_gemfile(devfile) if File.exist?(devfile)

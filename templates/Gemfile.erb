source "https://rubygems.org"
ruby "<%= RUBY_VERSION %>"

gem "rails", "<%= Rails.version %>"

gem "dotenv"
gem "env_vars"
gem "puma"
gem "rails-env"
gem "secure_headers"

<%- unless skip_active_record? -%>
gem "<%= database_adapter %>"
gem "bcrypt"
<%- if database_adapter == "pg" -%>
gem "ar-uuid"
gem "ar-timestamptz"
gem "ar-check"
<%- end -%>
<%- end -%>

gem "sass-rails", github: "rails/sass-rails", branch: "master"
gem "autoprefixer-rails"
<%- unless skip_javascript? -%>
gem "jquery-rails"
gem "turbolinks", "~> 5.x"
gem "uglifier"
gem "sprockets-rails", github: "rails/sprockets-rails", branch: "master"
gem "sprockets", github: "rails/sprockets", branch: "master"
gem "babel-schmooze-sprockets"
<%- end -%>

group :production do
  gem "rails_stdout_logging"
  gem "lograge"
end

group :development do
  gem "check_files"
end

group :development, :test do
  gem "test_squad"
end

group :test do
  gem "test_notifier"
  gem "capybara"
  gem "poltergeist"
  gem "minitest-utils"
end

# You can have your own development dependencies.
# Just add them to `Gemfile.dev`.
devfile = "#{__dir__}/Gemfile.dev"
eval_gemfile(devfile) if File.exist?(devfile)

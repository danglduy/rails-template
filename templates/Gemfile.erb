source "https://rubygems.org"
ruby "<%= RUBY_VERSION %>"

gem "rails", "<%= Rails.version %>"

gem "dotenv"
gem "env_vars"
gem "puma"
gem "rails-env"
gem "secure_headers"

<%- unless skip_active_record? -%>
gem "bcrypt"
gem "<%= database_adapter %>", "~> 0.18"
<%- if database_adapter == "pg" -%>
gem "ar-uuid"
gem "ar-timestamptz"
gem "ar-check"
<%- end -%>
<%- end -%>

group :production do
  gem "lograge"
  gem "rails_stdout_logging"
end

group :development do
  gem "check_files"
  gem "foreman"
end

group :test do
  gem "capybara"
  gem "chromedriver-helper"
  gem "launchy"
  gem "minitest-utils"
  gem "selenium-webdriver"
end

group :development, :test do
  gem "pry-meta", require: false
end

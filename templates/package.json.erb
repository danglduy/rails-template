{
  "name": "<%= options[:app_name] %>",
  "private": true,
  "scripts": {
    "js:watch": "webpack --watch --config ./config/webpack/development.js",
    "js:dist": "webpack --config ./config/webpack/production.js",
    "js:lint": "eslint --ext .jsx --ext .js app/frontend test/frontend",
    "js:test": "NODE_ENV=test mocha-webpack --reporter dot --webpack-config config/webpack/test.js 'test/**/*.test.{js,jsx}'"
  },
  "devDependencies": {
    "eslint": "^4.0.0",
    "mocha": "^3.4.2",
    "mocha-webpack": "1.0.0-beta.1",
    "webpack": "2.6.1",
    "webpack-rails": "https://github.com/fnando/webpack-rails.git"
  }
}
